<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baige"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_log_in"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/red_rounded_btn"
        android:text="@string/log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_in_login" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/black_rounded_btn"
        android:text="@string/sign_up"
        android:textColor="#ffe1f0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_log_in"
        app:layout_constraintTop_toBottomOf="@+id/button_log_in"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/vector_football_image"
        android:layout_width="251dp"
        android:layout_height="214dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_socsoc" />

    <TextView
        android:id="@+id/username_field_in_login"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_marginEnd="92dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="92dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:background="#1aB00020"
        android:drawableLeft="@drawable/email_icon"
        android:hint="@string/hint_username"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vector_football_image" />

    <TextView
        android:id="@+id/password_in_login"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#1aB00020"
        android:drawableLeft="@drawable/password_lock_icon"
        android:hint="@string/hint_password"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/username_field_in_login"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/username_field_in_login"
        app:layout_constraintTop_toBottomOf="@+id/username_field_in_login" />

</android.support.constraint.ConstraintLayout>